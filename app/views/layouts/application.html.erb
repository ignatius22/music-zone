<!DOCTYPE html>
<html>

<head>
    <title>MusicZone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
    <% if flash[:notice] %>
    <div>
        <p class="notice text-center text-success">
            <%= notice %>
        </p>
    </div>
    <% end %>
    <% if flash[:alert] %>
    <div>
        <p class="alert text-center text-danger">
            <%= alert %>
        </p>
    </div>
    <% end -%>
    <%= yield %>
</body>
</html>