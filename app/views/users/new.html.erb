<head>
<%= stylesheet_link_tag 'users' %>
<head>
    
<div class="container-fluid d-flex" style="width:100%;">
   <div class="userleft">Hello</div>
   <div class="userright">
   <div style="width:100%">
   <%=render 'errors' %>
   </div>
    <div></div>
   <div class="container mb-4">
     <%= form_for (@user), :url => users_path, :html => {class: "form-signin"} do |f| %>
        <div class="form-group">
        <label for="exampleInputEmail1">Username</label>
           <%= f.text_field :Username, class: "form-control", id:"exampleInputEmail1", placeholder: "Enter Username" %>
        </div>
        <div class="form-group">
        <label for="exampleInputEmail1">Enter Fullname</label>
           <%= f.text_field :Fullname, class: "form-control", placeholder: "Enter Fullname" %>
        </div>
        <div class="form-group">
        <label for="exampleInputEmail1">Photo</label>
           <%= f.file_field :Photo, class: "form-control", id:"exampleInputEmail1" %>
        </div>
   
        <div class="form-group">
        <label for="exampleInputEmail1">Cover Image</label>
            <%= f.file_field :CoverImage, class: "form-control",id:"exampleInputEmail1"  %>
        </div>

        <div class="form-label-group">
            <%= f.submit "sign up",  class: "btn btn-lg btn-primary btn-block btn-color text-uppercase"%>
        </div>
        <%= link_to "Login In", login_path %>
        <% end %>
        </div>
   </div>
</div>
